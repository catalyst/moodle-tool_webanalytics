{{!
    @template watool_guniversal/tracking_code

    Template for adding the Google Universal Tracking script.

    Example context (json):
    {
        "analyticsid": "The Google tracking code",
        "addition": "Page tracking info added by this plugin",
        "userid": "Moodle User ID",
        "anonymizeip": "Define if we need to anonymize user's ip"
    }
}}

<script type="text/javascript">
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', '{{analyticsid}}', {'siteSpeedSampleRate': 50});
    {{#userid}}ga('set', 'userId', '{{userid}}');{{/userid}}
    {{#anonymizeip}}ga('set', 'anonymizeIp', true);{{/anonymizeip}}
    ga('send', {{{addition}}});
</script>